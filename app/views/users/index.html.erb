<p class="text-lg leading-snug"><%= notice %></p>

<div class="p-10">
  <h1 class="mb-4 text-4xl font-black">Users</h1>
  <table class="min-w-full table-auto">
    <thead class="bg-gray-800 text-gray-300" >
      <tr>
        <th>FirstName</th>
        <th>Email</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr class="border-4 border-gray-200">
          <td><%= user.first_name %></td>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', user, class: "hover:bg-green hover:text-black" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "hover:bg-yellow hover:text-black" %></td>
          <td><%= link_to 'Destroy', user, class: "hover:bg-red hover:text-black", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New User', new_user_path, class: "bg-indigo-500 text-white px-4 py-2 border rounded-md hover:bg-white hover:border-indigo-500 hover:text-black" %>
